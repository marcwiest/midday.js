{
  "name": "midday.js",
  "version": "0.1.0",
  "description": "A modern vanilla JS plugin for fixed headers that change style as you scroll through sections. Zero dependencies. The spiritual successor to midnight.js.",
  "type": "module",
  "main": "./dist/midday.umd.js",
  "module": "./dist/midday.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/midday.mjs",
      "require": "./dist/midday.umd.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "import": "./dist/vue.mjs"
    },
    "./svelte": {
      "types": "./dist/svelte.d.ts",
      "import": "./dist/svelte.mjs"
    },
    "./solid": {
      "types": "./dist/solid.d.ts",
      "import": "./dist/solid.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.config.umd.ts && tsc --emitDeclarationOnly",
    "preview": "vite preview"
  },
  "keywords": [
    "header",
    "fixed-header",
    "scroll",
    "clip-path",
    "navigation",
    "midnight.js",
    "vanilla-js",
    "no-dependencies",
    "react",
    "vue",
    "svelte",
    "solid"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18",
    "solid-js": ">=1",
    "vue": ">=3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "solid-js": "^1.9.11",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vue": "^3.5.28"
  }
}
